---
import { Card, CardContent } from "./ui/card";

interface Props {
  title: string;
  value: number;
  modifier: string;
  description: string;
}

const { title, value, modifier, description } = Astro.props;
---

<Card className="bg-amber-100">
  <CardContent className="text-center">
    <h3 class="text-lg">{title}</h3>
    <div class="text-2xl my-2">{value}</div>
    <div class="text-lg text-red-700">{modifier}</div>
    <div class="text-xs mt-2 italic">{description}</div>
  </CardContent>
</Card>
