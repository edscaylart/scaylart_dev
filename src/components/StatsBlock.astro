---
import "./src/styles/global.css";

interface Props {
  title: string;
  value: number;
  modifier: string;
  description: string;
}

const { title, value, modifier, description } = Astro.props;
---

<div
  class="border-2 border-stone-800 rounded-md p-4 bg-amber-100 text-center shadow-md"
>
  <h3 class="text-md font-bold">{title}</h3>
  <div class="text-xl font-bold my-2">{value}</div>
  <div class="text-xs font-bold text-red-700">{modifier}</div>
  <div class="text-[10px] mt-2 italic">{description}</div>
</div>
